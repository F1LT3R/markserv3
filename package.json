{
  "name": "markserv3",
  "version": "1.0.0-alpha.0",
  "description": "Serve Markdown content from a directory and reaload as you edit in realtime.",
  "preferGlobal": true,
  "main": "markserv.js",
  "bin": {
    "markserv": "./lib/markserv.js"
  },
  "scripts": {
    "test": "xo ./**/*.js && ./node_modules/.bin/_mocha ./lib/**/*.spec.js --recursive && npm run cover",
    "cover": "./node_modules/istanbul/lib/cli.js cover ./node_modules/.bin/_mocha -x ./**/*.spec.js --include-all-sources ./**/*.js",
    "coveralls": "./node_modules/istanbul/lib/cli.js cover ./node_modules/.bin/_mocha  -x ./**/*.spec.js --include-all-sources ./**/*.js && cat ./coverage/lcov.info | ./node_modules/.bin/coveralls -v",
    "preinstall": "rm -rf node_modules/app || true",
    "postinstall": "ln -s ../ node_modules/app"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/f1lt3r/markserv3.git"
  },
  "keywords": [
    "markdown",
    "reload",
    "server",
    "html",
    "http",
    "realtime"
  ],
  "author": "F1LT3R",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/f1lt3r/markserv3/issues"
  },
  "homepage": "https://github.com/f1lt3r/markserv3#readme",
  "devDependencies": {
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "coveralls": "^2.13.0",
    "istanbul": "^0.4.5",
    "mocha": "^3.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "xo": "^0.18.1"
  },
  "xo": {
    "esnext": true,
    "semicolon": false,
    "globals": [
      "it",
      "describe",
      "beforeEach",
      "before",
      "after",
      "afterEach"
    ],
    "rules": {
      "import/no-extraneous-dependencies": 0,
      "import/no-dynamic-require": 0,
      "import/no-unresolved": 0,
      "new-cap": 0,
      "no-use-extend-native": 0,
      "no-multi-str": 0
    },
    "overrides": [
      {
        "files": "./**/Markconf.js",
        "rules": {
          "unicorn/filename-case": [
            "error",
            {
              "case": "pascalCase"
            }
          ]
        }
      },
      {
        "files": "./**/Markconf.spec.js",
        "rules": {
          "unicorn/filename-case": 0
        }
      }
    ]
  },
  "dependencies": {
    "fs-extra": "^2.1.2",
    "portfinder": "^1.0.13"
  }
}
